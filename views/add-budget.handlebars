<div class="inner cover position-absolute top-50 start-50 translate-middle">
  <div class="container center">
    <div class="row">
      <h1 class="display-4">You are at adding budget panel!</h1>
    </div>
    <div class="row">
      <form class="g-1" method="POST">
        <h1 class="display-5" style="font-size: 24px;">Make them rich... or not
          üòÅ</h1>
        <p class="lead">Choose family from dropdown.</p>
          <select class="form-select" id="familySelect" name="family">
            <option value="">Select family</option>
            {{#each families}}
              <option name="family" value="{{this._id}}:{{this.budget}}">{{this.name}}</option>
            {{/each}}
          </select>
          <br>
          <div class="card" id="moneyCard" hidden="true">
            <div class="card-body">
              <h5 class="card-title display-5" id="familyHeader"></h5>
                 <span id="money" class="card-title display-5" style="color: rgb(87, 153, 87)">500</span> PLN.
              <p class="lead"> You can increase or decrease their amount of money by 50, clicking on + or - buttons.</p>
              <button type="button" id='addBtn'class="btn btn-outline-success"><span style="font-size:25px; text-decoration:solid">+</span></button>
              <button type="button" id='subtractBtn'class="btn btn-outline-danger"><span style="font-size:25px; text-decoration:solid">&ThinSpace;-&ThinSpace;</span></button>
              <span id="addedMoney" class="lead" style="color:rgb(82, 161, 57); font-size:25px;"></span>
              <input type="hidden" id="hiddenMoney" name="budget" value="">
            </div>
          </div>
        </div>
        <br />
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-outline-dark" id="save-button">Save</button>
          <a class="btn btn-outline-dark" type="button" href="/admin" id="back-button">Back</a>
        </div>
      </form>
    </div>
  </div>
</div>

  <script src="/js/changeMoneyValues.js"></script>
